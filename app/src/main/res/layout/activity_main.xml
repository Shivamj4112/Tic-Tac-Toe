<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            
            <ImageView
                android:id="@+id/box101"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" 
                android:layout_margin="5dp"/>
            
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?colorOnSecondary"/>

            <ImageView
                android:id="@+id/box102"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"/>  
            
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?colorOnSecondary"/>

            <ImageView
                android:id="@+id/box103"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?colorOnSecondary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/box201"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?colorOnSecondary"/>

            <ImageView
                android:id="@+id/box202"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?colorOnSecondary"/>

            <ImageView
                android:id="@+id/box203"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?colorOnSecondary"/>

        <LinearLayout
            android:id="@+id/layer3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/box301"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?colorOnSecondary"/>

            <ImageView
                android:id="@+id/box302"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?colorOnSecondary"/>

            <ImageView
                android:id="@+id/box303"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"/>


        </LinearLayout>
    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/reset"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="6dp"
            android:layout_gravity="center"
            android:foreground="@drawable/ripple_black"
            app:cardElevation="80dp"
            android:clickable="true"
            android:backgroundTint="@android:color/holo_blue_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restart"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:letterSpacing="0.2"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>